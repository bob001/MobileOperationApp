<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_qiangxiu_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.swdn.myview_qiu.TourInspectionTitleView
        my:titleName="@string/titleTourList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.swdn.myview_qiu.TourInspectionTitleView>

    <View
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginLeft="10dp"
                android:id="@+id/ibtn_tour_date"
                android:src="@drawable/calendar_select"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:cropToPadding="false" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_tour_Date"
                android:text="时间"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ibtn_tour_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginLeft="10dp"
                android:id="@+id/ibtn_tour_category"
                android:src="@drawable/category"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_tour_category"
                android:text="类型"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ibtn_tour_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ibtn_tour_search"
                android:background="#00000000"
                android:src="@drawable/searchbtn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY" />
            <TextView
                android:layout_toRightOf="@+id/ibtn_tour_search"
                android:layout_centerVertical="true"
                android:text="点击刷新"
                android:textColor="#adafbe"
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <View
        android:background="#babbc2"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <View
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ListView
        android:id="@+id/lv_tour_info"
        android:dividerHeight="10dp"
        android:divider="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>
